<Window x:Class="WinUIOrderApp.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinUIOrderApp"
        Width="1280" Height="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации (простая и надёжная) -->
        <StackPanel Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <TextBlock Text="Навигация"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="12,12,12,8"/>

            <ListBox x:Name="NavList"
                     SelectionChanged="NavList_SelectionChanged"
                     BorderThickness="0"
                     Margin="8"
                     HorizontalContentAlignment="Stretch">
                <ListBoxItem Content="Главная"            Tag="DashboardPage"  Padding="12"/>
                <ListBoxItem Content="Data"               Tag="DataPage"       Padding="12"/>
                <ListBoxItem Content="Документы"          Tag="DocumentsPage"  Padding="12"/>
                <ListBoxItem Content="SUZ"                Tag="SUZPage"        Padding="12"/>
                <ListBoxItem Content="Каталог"            Tag="NationalCatalogPage" Padding="12"/>
                <ListBoxItem Content="Поиск"              Tag="SearchPage"     Padding="12"/>
                <ListBoxItem Content="Экспорт"            Tag="ExportsPage"    Padding="12"/>
                <ListBoxItem Content="Настройки"          Tag="SettingsPage"   Padding="12"/>
            </ListBox>
        </StackPanel>

        <!-- Область отображения страниц -->
        <Frame x:Name="ContentFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               JournalOwnership="OwnsJournal" />
    </Grid>
</Window>
