<Page x:Class="WinUIOrderApp.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinUIOrderApp.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="DataPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Background="#1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20" VerticalAlignment="Center">
            <Button Content="Свод по имени"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CalculateSummaryCommand}"/>
            <Button Content="Фильтры"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ToggleFiltersCommand}"/>
            <TextBlock Text=""
                       Visibility="Collapsed"/>
        </StackPanel>

        <Border Grid.Row="1"
                Margin="20,0,20,10"
                Padding="12"
                Background="#252525"
                Visibility="{Binding IsFilterPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <StackPanel Width="220">
                    <TextBlock Text="Наименование"
                               Foreground="#FFB0B0B0"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding NameFilterOptions}"
                              SelectedItem="{Binding SelectedNameFilter, Mode=TwoWay}"
                              Background="#2D2D2D"
                              Foreground="White"/>
                </StackPanel>
                <StackPanel Width="180">
                    <TextBlock Text="GTIN"
                               Foreground="#FFB0B0B0"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding GtinFilterOptions}"
                              SelectedItem="{Binding SelectedGtinFilter, Mode=TwoWay}"
                              Background="#2D2D2D"
                              Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  Margin="20,0,20,10"
                  Background="#2A2A2A"
                  Foreground="White"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  RowBackground="#2F2F2F"
                  AlternatingRowBackground="#333333"
                  BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код КМ (API)" Binding="{Binding Cis}" Width="*" MinWidth="180"/>
                <DataGridTextColumn Header="КИ" Binding="{Binding Ki}" Width="200"/>
                <DataGridTextColumn Header="GTIN" Binding="{Binding Gtin}" Width="120"/>
                <DataGridTextColumn Header="Наименование (API)" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Наименование (кеш)" Binding="{Binding CachedName}" Width="200"/>
                <DataGridTextColumn Header="Полный КМ" Binding="{Binding FullCryptoCode}" Width="250"/>
                <DataGridTextColumn Header="Источник" Binding="{Binding SourceFile}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="20,0,20,20">
            <TextBlock Text="{Binding SummaryText}"
                       Foreground="White"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>
            <Button Content="Сохранить как"
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    Command="{Binding SaveAsCommand}"/>
        </StackPanel>
    </Grid>
</Page>
