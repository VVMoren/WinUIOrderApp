<Page x:Class="WinUIOrderApp.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:WinUIOrderApp.Models"
      xmlns:vm="clr-namespace:WinUIOrderApp.ViewModels.Pages"
      xmlns:conv="clr-namespace:WinUIOrderApp.Converters"
      Title="DataPage">

    <Page.DataContext>
        <vm:DataViewModel />
    </Page.DataContext>

    <Page.Resources>
        <!-- Конвертер цвета для чипов фильтров -->
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>

        <!-- Центрирование текста в ячейке -->
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Центрирование текста в TextBox при редактировании -->
        <Style x:Key="CenteredTextBoxStyle" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>


    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <ComboBox x:Name="CbField" Width="148" SelectionChanged="CbField_SelectionChanged">
                <ComboBoxItem Content="name"/>
                <ComboBoxItem Content="ownerName"/>
                <ComboBoxItem Content="ownerInn"/>
                <ComboBoxItem Content="producerName"/>
            </ComboBox>

            <ComboBox x:Name="CbCondition" Width="151">
                <ComboBoxItem Content="Содержит"/>
                <ComboBoxItem Content="Не содержит"/>
            </ComboBox>

            <!-- TextBox / ComboBox переключаются динамически -->
            <TextBox x:Name="TbValue" Width="200" Visibility="Collapsed"/>
            <ComboBox x:Name="CbValue" Width="200" Visibility="Collapsed"/>

            <Button Content="Применить" Click="BtnApplyFilter_Click"/>
        </StackPanel>

        <!-- Активные фильтры (чипы) -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding ActiveFilters}" Margin="0,0,0,12">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding IsInclude, Converter={StaticResource BoolToColorConverter}}"
                        Padding="4" Margin="0,0,8,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Field}" Foreground="White"/>
                            <TextBlock Text="=" Foreground="White" Margin="4,0"/>
                            <TextBlock Text="{Binding Value}" Foreground="White"/>
                            <Button Content="×" Tag="{Binding}" Click="RemoveFilter_Click"
                                Margin="8,0,0,0" Padding="0" Width="20" Height="20"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Таблица -->
        <Border Grid.Row="2" BorderBrush="Green" BorderThickness="4" CornerRadius="4" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding SummaryItems}"
                          AutoGenerateColumns="False"
                          CanUserSortColumns="True"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          SelectionMode="Single"
                          Margin="0"
                          RowHeight="40">

                    <DataGrid.Columns>
                        <!-- Name -->
                        <DataGridTextColumn Header="name"
                            Binding="{Binding Name}"
                            IsReadOnly="True"
                            Width="6*" />

                        <!-- OwnerName -->
                        <DataGridTextColumn Header="ownerName"
                            Binding="{Binding Ip}"
                            IsReadOnly="True"
                            Width="6*" />

                        <!-- Кол-во по name -->
                        <DataGridTextColumn Header="kol.name"
                            Binding="{Binding TotalByName}"
                            IsReadOnly="True"
                            Width="100"
                            ElementStyle="{StaticResource CenteredCellStyle}" />

                        <!-- Кол-во заказа (редактируемое) -->
                        <DataGridTextColumn Header="kol.zak"
                            Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Width="100"
                            ElementStyle="{StaticResource CenteredCellStyle}"
                            EditingElementStyle="{StaticResource CenteredTextBoxStyle}" />
                    </DataGrid.Columns>
                </DataGrid>

            </ScrollViewer>
        </Border>
    </Grid>


</Page>
