<Page
    x:Class="WinUIOrderApp.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:WinUIOrderApp.ViewModels.Pages"
    Title="DashboardPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Page.DataContext>
        <viewModels:DashboardViewModel />
    </Page.DataContext>

    <Grid Background="#1F1F1F">
        <StackPanel Margin="40" VerticalAlignment="Top" Spacing="20">
            <TextBlock Text="Информация об организации"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>

            <Border BorderBrush="#555"
                    BorderThickness="1"
                    Padding="16"
                    CornerRadius="6"
                    Background="#2A2A2A">
                <StackPanel>
                    <TextBlock Text="Организация:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationName}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="ИНН:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationInn}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="ОГРН:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationOgrn}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="Товарная группа:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding ProductGroupName}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#444" BorderThickness="1" Background="#262626" CornerRadius="6" Padding="16"
                    Visibility="{Binding IsCryptoTailFeatureEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Выбрать папку криптохвостов"
                                Command="{Binding SelectCryptoTailFolderCommand}"
                                Visibility="{Binding IsCryptoTailFeatureEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#FF2196F3" Foreground="White" Padding="16,6"/>
                        <Button Content="Получить кеш данных для товаров"
                                Command="{Binding BuildProductCacheCommand}"
                                Visibility="{Binding IsCryptoTailFeatureEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#FFF6F42E" Foreground="Black" Padding="16,6"/>
                        <Button Content="Получить остатки"
                                Command="{Binding RequestStocksCommand}"
                                Visibility="{Binding IsCryptoTailFeatureEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#FF4CAF50" Foreground="White" Padding="16,6"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Папка криптохвостов:" Foreground="#FFB0B0B0"/>
                        <TextBlock Text="{Binding CryptoTailFolder}" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="{Binding ProductCacheStatus}" Foreground="#FFB0B0B0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
