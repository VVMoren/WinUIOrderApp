
    <Page
    x:Class="WinUIOrderApp.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:WinUIOrderApp.ViewModels.Pages"
    Title="DashboardPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Page.DataContext>
        <viewModels:DashboardViewModel />
    </Page.DataContext>

    <Grid Background="#1F1F1F">
        <StackPanel Margin="40" VerticalAlignment="Top">
            <TextBlock Text="Информация об организации"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <Border BorderBrush="#555"
                    BorderThickness="1"
                    Padding="16"
                    CornerRadius="6"
                    Background="#2A2A2A">
                <StackPanel>
                    <TextBlock Text="Организация:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationName}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="ИНН:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationInn}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="ОГРН:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding OrganisationOgrn}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>

                    <TextBlock Text="Товарная группа:" FontWeight="Bold" Foreground="#ccc"/>
                    <TextBlock Text="{Binding ProductGroupName}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <StackPanel Margin="0,24,0,0" Visibility="{Binding IsCryptoTailEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Работа с криптохвостами" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="{Binding CryptoTailFolderPath}" FontSize="12" Foreground="#FFB0B0B0" Margin="0,4,0,8" TextWrapping="Wrap"/>
                <WrapPanel>
                    <Button Content="Выбрать папку" Command="{Binding SelectCryptoTailFolderCommand}" Margin="0,0,12,12" Padding="16,6"/>
                    <Button Content="Получить кеш данных для товаров" Command="{Binding FetchProductCacheAsyncCommand}" Margin="0,0,12,12" Padding="16,6"/>
                    <Button Content="Получить остатки" Command="{Binding FetchStockCommand}" Margin="0,0,12,12" Padding="16,6"/>
                </WrapPanel>
                <TextBlock Text="{Binding ProductCacheStatus}" FontSize="12" Foreground="#FFB0B0B0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
