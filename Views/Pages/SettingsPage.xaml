<Page
    x:Class="WinUIOrderApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinUIOrderApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    Background="#FF1F1F1F"
    Foreground="White"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Надписи -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF6F42E"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF6F42E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFF6F42E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Цвета -->
        <SolidColorBrush x:Key="Seg_Background" Color="White"/>
        <SolidColorBrush x:Key="Seg_Border" Color="#FFBFD6E9"/>
        <SolidColorBrush x:Key="Seg_Selected" Color="#FFF6F42E"/>
        <SolidColorBrush x:Key="Seg_Text" Color="#FF0A0A0A"/>
        <SolidColorBrush x:Key="Seg_SelectedText" Color="#FF0A0A0A"/>

        <!-- 2) Стиль для каждой "плитки" (TabItem) -->
        <Style x:Key="SegmentedTabItemStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource Seg_Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Seg_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <!-- Одна плитка: рамка и содержимое -->
                        <Border x:Name="Bd"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Выбранная плитка -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Seg_Selected}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Seg_Selected}"/>
                                <Setter Property="Foreground" Value="{StaticResource Seg_SelectedText}"/>
                            </Trigger>

                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF8FB9E6"/>
                            </Trigger>

                            <!-- Отключено -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 3) Шаблон TabControl: заголовки в UniformGrid (равные ширины) -->
        <Style x:Key="SegmentedTabControlStyle" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <DockPanel>
                            <!-- Заголовки -->
                            <UniformGrid x:Name="HeaderPanel"
                         IsItemsHost="True"
                         Rows="1"
                         DockPanel.Dock="Top"
                         Margin="12"
                         HorizontalAlignment="Stretch" />
                            <!-- Контентная область в рамке -->
                            <Border BorderBrush="{StaticResource Seg_Border}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Background="White"
                    Margin="12,0,12,12"
                    Padding="8">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Применяем стиль к Item-ам по умолчанию -->
            <Setter Property="ItemContainerStyle" Value="{StaticResource SegmentedTabItemStyle}"/>
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" Orientation="Vertical" VerticalAlignment="Top">

            <!-- Секция выбора сертификата -->
            <TextBlock 
                Text="Сертификат для подключения к ГИС МТ" 
                Style="{StaticResource SectionHeaderStyle}"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <ComboBox 
                    Width="400"
                    Style="{StaticResource ComboBoxStyle}"
                    ItemsSource="{Binding Certificates}"
                    SelectedItem="{Binding SelectedCertificate, Mode=TwoWay}" 
                    Foreground="Black" 
                    SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="{Binding SubjectName.Name}" 
                                Foreground="Black"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button
                    Content="Подключиться к ГИС МТ"
                    Style="{StaticResource ButtonStyle}"
                    Command="{Binding ConnectToGisMtCommand}"
                    Width="147"
                    Margin="12,0,0,0" Background="#FFF6F42E" Foreground="Black"/>
            </StackPanel>

            <!-- Информация о сертификате -->
            <Border 
                Background="#FF2D2D2D"
                BorderBrush="#FF333333"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Активный сертификат:"
                        Foreground="#FFB0B0B0"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"/>

                    <TextBlock 
                        Text="{Binding CertificateOwnerPublicName}"
                        FontWeight="SemiBold" 
                        FontSize="14" 
                        Foreground="#FF4CAF50"
                        VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Товарная группа -->
            <TextBlock 
                Text="Товарная группа:"
                Foreground="#FFB0B0B0"
                Margin="0,0,0,6"
                FontWeight="SemiBold"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="#FF2D2D2D"
                    BorderBrush="#FF333333"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12,8"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedProductGroupName}"
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       MinWidth="200"/>
                    </StackPanel>
                </Border>

                <Button 
                    Content="Выбрать группу"
                    Style="{StaticResource ButtonStyle}"
                    Command="{Binding OpenProductGroupSelectionCommand}"
                    Width="120"
                    Margin="12,0,0,0" 
                    Background="#FFF6F42E" 
                    Foreground="Black"/>
            </StackPanel>

            <!-- Заголовок "Настройки" -->
            <TextBlock 
                Text="Настройки" 
                Style="{StaticResource SectionHeaderStyle}"
                FontSize="18"/>

            <!-- доп -->
            <Expander Header="⚙️ Дополнительные настройки" Style="{StaticResource ExpanderStyle}" IsExpanded="True">
                <Grid>
                    <TabControl Style="{StaticResource SegmentedTabControlStyle}" SelectedIndex="0" Background="#FF1F1F1F">
                        <!-- ЛК ЧЗ -->
                            <TabItem Header="Профиль" Foreground="Black">
                            <StackPanel Margin="12,8,12,12">
                                <TextBlock Text="настройки профиля" Foreground="Black" Margin="0,0,0,12"/>
                            </StackPanel>
                        </TabItem>

                        <!-- СУЗ -->
                        <TabItem Header="С.У.З." Foreground="Black">
                            <StackPanel Margin="12,8,12,12">
                                <TextBlock Text="Настройки системы управления заказами" 
                                            FontWeight="SemiBold" 
                                            Foreground="Black" 
                                            Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="OMS ID:" 
                                                FontWeight="Medium" 
                                                Foreground="Black" 
                                                Margin="10,5,10,5"/>
                                    
                                    <TextBox x:Name="OmsIdTextBox"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding SuzOmsId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="Black"
                                                Height="22"
                                                Padding="8,0" Width="303"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="ID sync:" 
                                                FontWeight="Medium" 
                                                Foreground="Black" 
                                                Margin="10,5,10,5"/>
                                    
                                    <TextBox x:Name="ConnectionIdTextBox"
                                                Style="{StaticResource TextBoxStyle}"
                                                Text="{Binding SuzConnectionId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="Black"
                                                Height="22"
                                                Padding="8,0" Width="303"/>
                                </StackPanel>

                                <!-- Кнопка сохранения -->
                                <Button Content="Сохранить настройки С.У.З."
                                        Style="{StaticResource ButtonStyle}"
                                        Command="{Binding SaveSuzSettingsCommand}"
                                        Width="200"
                                        Height="32"
                                        Background="#FFF6F42E" 
                                        Foreground="Black"/>
                            </StackPanel>
                        </TabItem>

                        <!-- НК -->
                        <TabItem Header="Национальный каталог" Foreground="Black">
                            <StackPanel Margin="12,8,12,12">
                                <TextBlock Text="настройки кт" Foreground="Black" Margin="0,0,0,12"/>
                            </StackPanel>
                        </TabItem>

                        <!-- Расширенные -->
                        <TabItem Header="Расширенные" Foreground="Black">
                            <StackPanel Margin="12,8,12,12" Orientation="Vertical">
                                <TextBlock Text="Настройки расширенных функций" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <CheckBox
                                    Content="Включить работу с криптохвостами и кешем товаров"
                                    IsChecked="{Binding IsCryptoTailSearchEnabled, Mode=TwoWay}"
                                    Foreground="Black"
                                    Margin="0,0,0,4"/>
                                <TextBlock
                                    Text="После сохранения станет доступен выбор папки с криптохвостами и кнопки на главной странице."
                                    Foreground="#FF5A5A5A"
                                    TextWrapping="Wrap"
                                    Margin="0,4,0,8"/>
                                <Button
                                    Content="Сохранить расширенные настройки"
                                    Style="{StaticResource ButtonStyle}"
                                    Command="{Binding SaveAdvancedSettingsCommand}"
                                    Width="250"
                                    Background="#FFF6F42E"
                                    Foreground="Black"/>
                            </StackPanel>
                        </TabItem>


                    </TabControl>
                </Grid>
            </Expander>

            <!-- Expander для лог-файла -->
            <Expander 
                Header="📝 Настройки лог-файла" 
                Style="{StaticResource ExpanderStyle}"
                IsExpanded="false">
                <StackPanel Margin="12,8,12,12">
                    <TextBlock 
                        Text="Путь хранения лог-файла:" 
                        FontWeight="SemiBold" 
                        Foreground="#FFB0B0B0" 
                        Margin="0,0,0,6"/>

                    <TextBox
                        Style="{StaticResource TextBoxStyle}"
                        Text="{Binding LogFilePath, Mode=OneWay}"
                        IsReadOnly="True"
                        FontFamily="Consolas"
                        Margin="0,0,0,12"/>

                    <Button
                        Content="Выбрать папку"
                        Style="{StaticResource ButtonStyle}"
                        Command="{Binding SelectLogFilePathCommand}"
                        Width="107" Background="#FFF6F42E" Foreground="Black" Height="23"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Page>