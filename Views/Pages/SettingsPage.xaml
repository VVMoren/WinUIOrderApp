<Page
    x:Class="WinUIOrderApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:WinUIOrderApp.Helpers"
    xmlns:local="clr-namespace:WinUIOrderApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:conv="clr-namespace:WinUIOrderApp.Converters"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FF1F1F1F"
    Foreground="White"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <conv:ProductGroupCodeToIconConverter x:Key="ProductGroupCodeToIconConverter"/>
        <conv:CertificateSimpleNameConverter x:Key="CertificateSimpleNameConverter"/>
        <conv:CertificateDetailsConverter x:Key="CertificateDetailsConverter"/>
        <conv:CertificateIssuerConverter x:Key="CertificateIssuerConverter"/>

        <!-- Тематические стили -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="CertificateComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="12,10"
                                Margin="2,2,2,4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF2D3645"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF303B4E"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF394E73"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ItemBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CertificateComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF242429"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3A3F4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,12,48,12"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="OuterBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <ContentPresenter x:Name="ContentPresenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectedItem}"
                                                      ContentTemplate="{TemplateBinding ItemTemplate}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    <TextBlock x:Name="Placeholder"
                                               Text="Выберите сертификат"
                                               Margin="{TemplateBinding Padding}"
                                               VerticalAlignment="Center"
                                               Foreground="#FF7C8498"
                                               FontSize="13"
                                               Visibility="Collapsed"/>
                                    <Grid HorizontalAlignment="Right"
                                          Width="44"
                                          Background="#1921283A"
                                          Margin="0"
                                          ClipToBounds="True">
                                        <Path Data="M 0 0 L 8 0 L 4 5 Z"
                                              Fill="#FF8AB4FF"
                                              Stretch="Uniform"
                                              Width="12"
                                              Height="8"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Grid Margin="0,6,0,0">
                                    <Border x:Name="DropShadow"
                                            Background="Transparent"
                                            CornerRadius="12"
                                            Margin="6"
                                            Opacity="0.45">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#CC000000"/>
                                        </Border.Effect>
                                    </Border>
                                    <Border x:Name="DropDownBorder"
                                            Background="#FF1F1F26"
                                            BorderBrush="#FF3A3F4A"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="4"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="OuterBorder" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#FF2D2D2D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#FF4E8DFF"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#FF6FA7FF"/>
                                <Setter TargetName="OuterBorder" Property="Background" Value="#FF2A2F3D"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#FF6FA7FF"/>
                                <Setter TargetName="OuterBorder" Property="Background" Value="#FF2A2F3D"/>
                            </Trigger>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="CertificateSelectorItemTemplate">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding Converter={StaticResource CertificateSimpleNameConverter}}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,0,2"/>
                    <TextBlock FontSize="12"
                               Foreground="#FFA9AFBF"
                               TextTrimming="CharacterEllipsis">
                        <Run Text="Издатель: "/>
                        <Run Text="{Binding Converter={StaticResource CertificateIssuerConverter}}"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock FontSize="12" Foreground="#FFA9AFBF" Margin="0,0,8,0">
                            <Run Text="Действителен до "/>
                            <Run Text="{Binding NotAfter, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </TextBlock>
                        <Border Background="#332196F3" CornerRadius="6" Padding="6,2" Visibility="{Binding HasPrivateKey, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="с приватным ключом"
                                       FontSize="11"
                                       Foreground="#FF64B5F6"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1"
                        Margin="16,0,0,0"
                        Background="#19334E68"
                        CornerRadius="8"
                        Padding="10,6"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding Thumbprint}"
                               FontSize="12"
                               FontFamily="Cascadia Code, Consolas, 'Courier New', monospace"
                               Foreground="#FF7DD3FF"
                               TextTrimming="CharacterEllipsis"/>
                </Border>
            </Grid>
        </DataTemplate>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" Orientation="Vertical" VerticalAlignment="Top">

            <!-- Секция выбора сертификата -->
            <TextBlock 
                Text="Сертификат для подключения к ГИС МТ" 
                Style="{StaticResource SectionHeaderStyle}"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <ComboBox
                    Width="420"
                    Style="{StaticResource CertificateComboBoxStyle}"
                    ItemsSource="{Binding Certificates}"
                    SelectedItem="{Binding SelectedCertificate, Mode=TwoWay}"
                    ItemContainerStyle="{StaticResource CertificateComboBoxItemStyle}"
                    ItemTemplate="{StaticResource CertificateSelectorItemTemplate}"
                    MaxDropDownHeight="340"/>

                <Button
                    Content="Подключиться к ГИС МТ"
                    Style="{StaticResource ButtonStyle}"
                    Command="{Binding ConnectToGisMtCommand}"
                    Width="147"
                    Margin="12,0,0,0" Background="#FFF6F42E" Foreground="Black"/>
            </StackPanel>

            <!-- Информация о сертификате -->
            <Border 
                Background="#FF2D2D2D"
                BorderBrush="#FF333333"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Активный сертификат:"
                        Foreground="#FFB0B0B0"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"/>

                    <TextBlock 
                        Text="{Binding Source={x:Static helpers:AppState.Instance}, Path=CertificateOwnerPublicName}"
                        FontWeight="SemiBold" 
                        FontSize="14" 
                        Foreground="#FF4CAF50"
                        VerticalAlignment="Center"/>

                    <Image 
                        Width="20" 
                        Height="20" 
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        Source="{Binding Source={x:Static helpers:AppState.Instance},
                                        Path=SelectedProductGroupCode,
                                        Converter={StaticResource ProductGroupCodeToIconConverter}}"
                        ToolTip="{Binding Source={x:Static helpers:AppState.Instance}, Path=SelectedProductGroupName}"/>
                </StackPanel>
            </Border>

            <!-- Товарная группа -->
            <TextBlock 
                Text="Товарная группа:"
                Foreground="#FFB0B0B0"
                Margin="0,0,0,6"
                FontWeight="SemiBold"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="#FF2D2D2D"
                    BorderBrush="#FF333333"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12,8"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Width="20" 
                                   Height="20" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"
                                   Source="{Binding Source={x:Static helpers:AppState.Instance},Path=SelectedProductGroupCode,Converter={StaticResource ProductGroupCodeToIconConverter}}"/>
                        <TextBlock Text="{Binding Source={x:Static helpers:AppState.Instance}, Path=SelectedProductGroupName}"
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       MinWidth="200"/>
                    </StackPanel>
                </Border>

                <Button 
                    Content="Выбрать группу"
                    Style="{StaticResource ButtonStyle}"
                    Command="{Binding OpenProductGroupSelectionCommand}"
                    Width="120"
                    Margin="12,0,0,0" 
                    Background="#FFF6F42E" 
                    Foreground="Black"/>
            </StackPanel>

            <!-- Заголовок "Настройки" -->
            <TextBlock 
                Text="Настройки" 
                Style="{StaticResource SectionHeaderStyle}"
                FontSize="18"/>

            <!-- Expander для лог-файла -->
            <Expander 
                Header="📝 Настройки лог-файла" 
                Style="{StaticResource ExpanderStyle}"
                IsExpanded="True">
                <StackPanel Margin="12,8,12,12">
                    <TextBlock 
                        Text="Путь хранения лог-файла:" 
                        FontWeight="SemiBold" 
                        Foreground="#FFB0B0B0" 
                        Margin="0,0,0,6"/>

                    <TextBox
                        Style="{StaticResource TextBoxStyle}"
                        Text="{Binding LogFilePath, Mode=OneWay}"
                        IsReadOnly="True"
                        FontFamily="Consolas"
                        Margin="0,0,0,12"/>

                    <Button
                        Content="Выбрать папку"
                        Style="{StaticResource ButtonStyle}"
                        Command="{Binding SelectLogFilePathCommand}"
                        Width="107" Background="#FFF6F42E" Foreground="Black" Height="23"/>
                </StackPanel>
            </Expander>

            <!-- Дополнительные настройки -->
            <Expander
                Header="⚙️ Дополнительные настройки"
                Style="{StaticResource ExpanderStyle}"
                IsExpanded="False">
                <StackPanel Margin="12,8,12,12">
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <TextBlock
                            Text="Расширенные параметры сертификата"
                            FontWeight="SemiBold"
                            Foreground="White"/>

                        <CheckBox
                            Content="Использовать криптохвосты при обработке КМ"
                            Foreground="White"
                            IsChecked="{Binding IsCryptoTailSearchEnabled, Mode=TwoWay}"
                            IsEnabled="{Binding CanModifyCertificatePreferences}"
                            Margin="0,4,0,0"/>

                        <TextBlock
                            Text="При включении станет доступен выбор папки с криптохвостами и расширенная обработка данных на главной странице."
                            TextWrapping="Wrap"
                            Foreground="#FFB0B0B0"
                            FontSize="12"/>

                        <Button
                            Content="Сохранить настройки"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding SaveCertificatePreferencesCommand}"
                            IsEnabled="{Binding CanModifyCertificatePreferences}"
                            Width="160"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</Page>
